<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="32dp"
    android:paddingBottom="32dp"
    android:paddingStart="96dp"
    android:paddingEnd="32dp"
    android:id="@+id/content"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <com.example.chillapp.SecretTextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Text1"
            android:textColor="@android:color/darker_gray"/>

        <com.example.chillapp.SecretTextView
            android:id="@+id/subTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="SubText1"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <com.example.chillapp.SecretTextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Text2"
            android:textColor="@android:color/darker_gray" />

        <com.example.chillapp.SecretTextView
            android:id="@+id/subTxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="SubText2"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_exit_layout"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/exit_airplaneMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:background="@drawable/background_btn"
            android:gravity="center"
            android:padding="12dp"
            android:text="Выключить режим полета"
            android:textAllCaps="false"
            android:textColor="#505050" />

        <Button
            android:id="@+id/reenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:background="@drawable/background_btn"
            android:gravity="center"
            android:padding="12dp"
            android:text="Выйти из комнаты"
            android:textAllCaps="false"
            android:textColor="#505050" />
    </LinearLayout>
</RelativeLayout>